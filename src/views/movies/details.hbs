<section id="details-page">

  <div class="main_card">
    <div class="card_left">
      <div class="card_datails">

        <h1>{{movie.title}}</h1>
        <div class="card-movie">
          <div class="first-info">
            <p class="card-genre">Genre: {{movie.genre}}</p>
            <p class="card-director">Directror: {{movie.director}}</p>
          </div>
          <div class="second-info">
            <p class="card-year">Year:{{movie.year}}</p>
            <p class="card-ranking">Rating:
              <span id="stars">{{{movie.rating}}}</span></p>
          </div>

        </div>

        <p class="disc">Description: {{movie.description}}</p>
      </div>
      {{#if isOwner}}
        <div class="details-btn">
          <button id="edit-button">Edit</button>
          <a href="/movies/{{movie._id}}/remove" id="delete-button">Delete</a>
        </div>
      {{/if}}
    </div>
    <div class="card_right">
      <a href="/cast/{{movie._id}}/attach" class="castAttach">
        <img src="{{movie.imageUrl}}" alt="{{movie.title}}" /></a>
    </div>
  </div>

  {{! Cast Details }}

  <div class="main-cast-card">
    {{#each casts}}
      <div class="cast-card">
        <div class="card-img">
          <img src="{{imageUrl}}" alt="{{name}}" />
        </div>
        <div class="cast-info">
          <h1>{{name}}</h1>
          <h3>Age: {{age}}</h3>
          <h3>Born: {{born}}</h3>
          <h3>Name in Movie: {{movieName}} </h3>
        </div>
      </div>
    {{/each}}

  </div>

</section>